<!DOCTYPE html>
<html>
  <head>
    <style>
       #map {
        height: 400px;
        width: 100%;
       }
    </style>
  </head>
  <body>
    <h3> <%= person %> Food Truck Tracker</h3>
    <p>
      located at x-coordinate: <%= location.lat %>, y-coordinate: <%= location.lng %>
    </p>
    <input type="text" id="mapsearch" size="50"></input>
    <div id="map"></div>
    <script>
      function initMap() {
        var roorkee = {lat: 29.862916, lng: 77.896410};

        var map = new google.maps.Map(document.getElementById('map'), {
          zoom: 10,
          center: roorkee
        });

        var marker = new google.maps.Marker({
          position: roorkee,
          map: map,
          title: "Hello World",
          draggable: true
        });

        var searchBox = new google.maps.places.SearchBox(document.getElementById('mapsearch'));

        google.maps.event.addListener(searchBox, 'places_changed', function(){

          var places = searchBox.getPlaces();

          //bound
          var bounds = new google.maps.LatLngBounds();
          var i, places;

          for(i = 0; place = places[i]; i++){
            bounds.extend(place.geometry.location);
            marker.setPosition(place.geometry.location);
          }

          map.fitBounds(bounds);
          map.setZoom(10);
        });

      }
    </script>
    <script async defer
    src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAPPJIvwAbCtudCE37ml0XOSF-yNxPGewc&callback=initMap&libraries=places">
    </script>
  </body>
</html>
